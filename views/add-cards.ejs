    <h2>Browse Cards</h2>
    <% for(let i=0; i < cards.length; i++) {%>
        <section class="card">
            <h3>
                <span>
                    <%= cards[i].number %>
                </span>
                <span>
                    <%= cards[i].name %>
                </span>
            </h3>
            <!-- <img src=<%= cards[i].image %> alt=""> -->
            <a href=<%=cards[i].image %>>Image</a>
            <h4>Upright:</h4>
            <p class="keywords">
                <%= cards[i].keywordsUp %>
            </p>
            <p class="description">
                <%= cards[i].descriptionUp %>
            </p>
            <h4>Reversed:</h4>
            <p class="keywords">
                <%= cards[i].keywordsRev %>
            </p>
            <p class="description">
                <%= cards[i].descriptionRev %>
            </p>
        </section>
        <% } %>

